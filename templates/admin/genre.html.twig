{% extends "base.html.twig" %}

{% block body %}

    <div class="row" style="margin-left: 50px; margin-top: 20px; margin-right: 20px;">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>Total results: ({{ pagination.getTotalItemCount }})</div>
                    <a href="{{path('new_genre')}}">
                    <button  class="btn btn-primary">Add new genre</button>
                    </a>

                    <form>
                        <div class="input-group mb-3">
                            <input type="text"
                                   name="g"
                                   class="form-control"
                                   placeholder="Search a genre"
                            >
                            <div class="input-group-append">
                                <button type="submit"
                                        class="btn btn-outline-secondary">
                                    <span class="fa fa-search"></span>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <table class="table">
                    <thead>
                    <tr>
                        <th>{{ knp_pagination_sortable(pagination, 'ID', 'f.id') }}<div class="sort fa fa-sort"></div></th>
                        <th>{{ knp_pagination_sortable(pagination, 'Genre', 'f.title') }}<div class="sort fa fa-sort"></div></th>
                        <th style="text-align: center;">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for genre in pagination %}
                        <tr>
                            <th>{{ genre.id }}</th>
                            <td>{{ genre.title }}</td>
                            <td align="center">
                                <a href="{{ path('edit_genre', {'id': genre.id})}}">
                                    <button class="btn btn-primary">Edit</button>
                                </a>
                                <a href="{{ path('delete_genre', {'id': genre.id})}}">
                                    <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this genre?')">Delete</button>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
    </div>
    <div>
{% endblock %}