{% extends 'base.html.twig' %}

{% block body %}
    <h2>This is the articles page</h2>
    <a href="{{ path("new_article") }}">Create a new article</a>
    <table>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
        {% if articles is defined %}
            {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td><a href="{{path('view_article',{'id': article.id})}}">{{ article.title }}</a></td>
                    <td>{{ article.author }}</td>
                    <td><a class="btn btn-primary" href="{{path('edit_article',{'id': article.id})}}">Edit</a>
                    <a class="btn btn-danger" href="{{path('delete_article',{'id': article.id})}}">Delete</a></td>
                </tr>
            {% endfor %}
        {% else %}
            No articles found.
        {% endif %}
    </table>

{% endblock %}